@model IEnumerable<LaCeibaNetv4.Models.RoundTbl>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoundNum)
        </th>
        <th>
           Name and Program 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoundNum)
            
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ProgramClientTbl.Id)*@
            @item.ProgramClientTbl.ClientsTbl.FirstName
            @item.ProgramClientTbl.ClientsTbl.MiddleName1
            @item.ProgramClientTbl.ClientsTbl.MiddleName2
            @item.ProgramClientTbl.ClientsTbl.LastName
            @item.ProgramClientTbl.ProgramTbl.Program
        </td>
        <td>
            @Html.ActionLink("Show Loans", "IndLoanShow", new { controller = "RoundTbl", id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
