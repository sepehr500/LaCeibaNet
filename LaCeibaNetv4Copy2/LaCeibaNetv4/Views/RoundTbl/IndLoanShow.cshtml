@model LaCeibaNetv4.Models.RoundTbl

@{
    ViewBag.Title = "RoundTblShow";
}

<h2> <span style="color: #000000;">@Model.ProgramClientTbl.ClientsTbl.FirstName @Model.ProgramClientTbl.ClientsTbl.MiddleName1 @Model.ProgramClientTbl.ClientsTbl.MiddleName2  @Model.ProgramClientTbl.ClientsTbl.LastName</span> | <span style="color: #080468">@Model.ProgramClientTbl.ProgramTbl.Program</span> | <span style="color: #130da9">Round:@Model.RoundNum</span>   </h2>

<p>
     @Html.ActionLink("Add New Loan", "IndLoanCreate", new { controller = "LoansTbls", id = Model.Id })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Loan Amount
        </th>
        <th>
            Disbersal Date
        </th>
        <th>
            Active
        </th>

    </tr>

    @foreach (var item in Model.LoansTbls)
    {
        <tr>
            <td>
                @String.Format("{0:f2}", item.AmtLoan)
            </td>
            <td>
                @item.TransferDate.ToString("d")
            </td>
            <td>
                @item.Active
            </td>
            <td>
                @Html.ActionLink("Show Payments", "IndPaymentShow", new { controller = "PaymentTbls", id = item.Id }) |
                @Html.ActionLink("Add New Payment", "IndPaymentCreate", new { controller = "PaymentTbls", id = item.Id,  DueDate = System.DateTime.Now }) |
                @Html.ActionLink("Edit", "Edit", new {controller = "LoansTbls", id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </td>
        </tr>
    }

</table>

@Html.ActionLink("Back", "IndRoundShow", "ProgramClientTbls", new {id = Model.PClientNameId }, null) |