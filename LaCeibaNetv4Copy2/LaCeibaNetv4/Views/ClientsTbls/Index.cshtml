@model IEnumerable<LaCeibaNetv4.Models.ClientsTbl>
@using LaCeibaNetv4.Models.Classes;
@using LaCeibaNetv4.ToolsStuff;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm()){
<p>
    Find by name: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            Middle Name 1
        </th>
        <th>
            Middle Name 2
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CenterTbl.Center)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th width="150">
            Credit Score
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MiddleName1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.DateAdded.Date.ToString("d")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenterTbl.Center)
            </td>
            <td>
                @if (item.Active == null) { 
                
                    <p>Exited</p>
                
                }
                
                else if ((bool)item.Active)
                {
                    <i class="glyphicon glyphicon-ok"></i>
                }

               else if((bool)item.Active == false) {
                        <i class="glyphicon glyphicon-remove"></i>
               }


            </td>
       <td>

       @{  
         decimal score;
        if (CScore.paymentCount(item) != 0)
        {
            score = (decimal)CScore.getNum(item) / (decimal)CScore.paymentCount(item);
        }
        else
        {
            score = 0;
        }
            
        }
       

        

       
            @String.Format("{0:f2}", score)   =  @CScore.getNum(item) / @CScore.paymentCount(item)
       </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (SpanDate.getRecentPayment(item) != null)
                { 
                @:| @Html.ActionLink("L.L", "IndPaymentShow", "PaymentTbls", new { id = SpanDate.getRecentPayment(item)  } , null) 
                
                }

            </td>
        </tr>
    }

</table>
