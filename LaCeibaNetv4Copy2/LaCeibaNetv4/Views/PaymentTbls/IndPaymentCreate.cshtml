@model LaCeibaNetv4.Models.PaymentTbl

@{
    ViewBag.Title = "IndPaymentCreate";
}

<h2>IndPaymentCreate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PaymentTbl</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DatePmtDue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control"
                       id="DatePmtDue"
                       name="DatePmtDue"
                       type="text"
                       value="@Model.DatePmtDue.ToString("d")" />
                @Html.ValidationMessageFor(model => model.DatePmtDue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DatePmtPaid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DatePmtPaid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DatePmtPaid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AmtPaid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AmtPaid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmtPaid, "", new { @class = "text-danger" })
            </div>
        </div>

<input hidden name="LoanId" value="@Model.LoanId" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
@Html.ActionLink("Back", "IndPaymentShow", "PaymentTbls", new {id = Model.LoanId }, null) 
</div>
