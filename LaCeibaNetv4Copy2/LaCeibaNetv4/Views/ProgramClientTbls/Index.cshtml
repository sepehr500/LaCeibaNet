@model IEnumerable<LaCeibaNetv4.Models.ProgramClientTbl>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-bordered" >
    <tr>
        <th>
           Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramTbl.Program)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientsTbl.FirstName)
            @if (item.ClientsTbl.MiddleName1 != "")
            {
            @Html.DisplayFor(modelItem => item.ClientsTbl.MiddleName1)
            }
            @if (item.ClientsTbl.MiddleName2 != "")
            {
                @Html.DisplayFor(modelItem => item.ClientsTbl.MiddleName2)
            }
            @Html.DisplayFor(modelItem => item.ClientsTbl.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramTbl.Program)
        </td>
        <td>
            @Html.ActionLink("Show Rounds", "IndRoundShow", new { controller = "ProgramClientTbls", id = item.Id }) |
            @Html.ActionLink("Add New Round", "AGRound", new { controller = "RoundTbl", id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
