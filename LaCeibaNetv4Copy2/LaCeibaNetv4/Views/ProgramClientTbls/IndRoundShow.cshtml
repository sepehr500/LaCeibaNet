@model LaCeibaNetv4.Models.ProgramClientTbl

@{
    ViewBag.Title = "Individual Round";
}

<h2>@Model.ClientsTbl.FirstName @Model.ClientsTbl.MiddleName1 @Model.ClientsTbl.MiddleName2  @Model.ClientsTbl.LastName @Model.ProgramTbl.Program Rounds</h2>

<p>
    @Html.ActionLink("New Round", "AGRound", new { controller = "RoundTbl", id = Model.Id })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
           Round
        </th>
    </tr>

@foreach (var item in Model.RoundTbls) {
    <tr>
        <td>
         @item.RoundNum.ToString()
        </td>

        <td>
            @if (item.LoansTbls.Count >= 3)
            {
            @Html.ActionLink("Show Loans", "IndLoanShow", new { controller = "RoundTbl", id = item.Id })@: |
            @: <b>Round Loan Limit Reached</b> |   
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) @:|
            @Html.ActionLink("Details", "Details", new { id=item.Id }) @:|
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) 

            }
            else {

            @Html.ActionLink("Show Loans", "IndLoanShow", new { controller = "RoundTbl", id = item.Id })@: |
            @Html.ActionLink("Add New Loan", "IndLoanCreate", new { controller = "LoansTbls", id = item.Id }) @:|
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })@: |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) @:|
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
