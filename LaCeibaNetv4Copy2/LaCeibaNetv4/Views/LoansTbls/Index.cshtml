    @Html.ActionLink("Create New", "Create")
</p>*@
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table table-striped table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AmtLoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransferDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.RoundTbl.Id)*@
            Client Info
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AmtLoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransferDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoundTbl.ProgramClientTbl.ClientsTbl.FirstName) 
            @Html.DisplayFor(modelItem => item.RoundTbl.ProgramClientTbl.ClientsTbl.MiddleName1) 
            @Html.DisplayFor(modelItem => item.RoundTbl.ProgramClientTbl.ClientsTbl.MiddleName2) 
            @Html.DisplayFor(modelItem => item.RoundTbl.ProgramClientTbl.ClientsTbl.LastName) ||
            @Html.DisplayFor(modelItem => item.RoundTbl.ProgramClientTbl.ProgramTbl.Program) || R#:@Html.DisplayFor(modelItem => item.RoundTbl.RoundNum) 
        </td>
        <td>
            @Html.ActionLink("Show Payments", "IndPaymentShow", new { controller = "PaymentTbls", id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
